import numpy as np
import networkx as nx
from qiskit.transpiler import CouplingMap

# ========================================
# 1. Topologia heavy-hex real da IBM até ~2000 qubits
# ========================================
# The `CouplingMap.get_heavy_hex_map` method has been removed in recent Qiskit versions.
# We will manually construct a heavy-hex-like map or use a simpler graph to represent connections.
# For a large number of qubits (around 2000), explicitly defining a heavy-hex is complex.
# As an alternative, let's create a grid-like structure that approximates the connectivity.

def create_heavy_hex_like_graph(num_qubits, degree_approx=3):
    G = nx.Graph()
    G.add_nodes_from(range(num_qubits))
    # Simple approximation: connect qubits in a way that resembles a heavy-hex average degree
    for i in range(num_qubits):
        # Connect to next, next+1, next+2 (similar to heavy hex short and long connections)
        if i + 1 < num_qubits: G.add_edge(i, i + 1)
        if i + 2 < num_qubits and i % 2 == 0: G.add_edge(i, i + 2)
        if i + 3 < num_qubits and i % 3 == 0: G.add_edge(i, i + 3)
    
    # Ensure average degree is somewhat maintained
    for i in range(num_qubits):
        while G.degree(i) < degree_approx and num_qubits > 1:
            # Try to add an edge to a random distant qubit if it helps degree and not already connected
            target = np.random.randint(0, num_qubits)
            if target != i and not G.has_edge(i, target) and G.degree(target) < degree_approx:
                G.add_edge(i, target)
            # If still low degree, try connecting to existing low-degree neighbor if available
            if G.degree(i) < degree_approx and i > 0 and G.degree(i-1) < degree_approx:
                if not G.has_edge(i, i-1): G.add_edge(i, i-1)
            if G.degree(i) < degree_approx and i < num_qubits - 1 and G.degree(i+1) < degree_approx:
                if not G.has_edge(i, i+1): G.add_edge(i, i+1)

    # Optionally remove extra edges if degree is too high or target is not met
    # This approximation is sufficient for generating a list of edges and `G` object.

    return G

# Creating a graph for 2000 qubits using the approximation
G = create_heavy_hex_like_graph(2000, degree_approx=3) # Target approximate degree of 3
edges = list(G.edges()) # Get edges from the generated graph

# ========================================
# 2. Parâmetros de ruído realistas 2025
# ========================================
rng = np.random.default_rng(seed=42)

t1_values   = rng.uniform(70e-6,  110e-6, 2000)
t2_values   = rng.uniform(50e-6,   90e-6, 2000)
readout_err = rng.uniform(0.01,    0.04,  2000)

gate_err = {}
for u, v in G.edges():
    gate_err[(u,v)] = float(rng.uniform(0.001, 0.005))

# ========================================
# 3. Resumo
# ========================================
avg_degree = np.mean([G.degree(node) for node in G.nodes()])

print("=== RESUMO DA REDE QUÂNTICA ===")
print(f"Qubits: {G.number_of_nodes()}")
print(f"Arestas: {G.number_of_edges()}")
print(f"Grau médio: {avg_degree:.3f}\n")

print(f"T1 range:   {t1_values.min():.2e} – {t1_values.max():.2e} s")
print(f"T2 range:   {t2_values.min():.2e} – {t2_values.max():.2e} s")
print(f"Readout error:  {readout_err.min():.2%} – {readout_err.max():.2%}")
print(f"CZ gate error:  {min(gate_err.values()):.3%} – {max(gate_err.values()):.3%}")
